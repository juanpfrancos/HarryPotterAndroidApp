<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Fondo}"
             x:Class="Unidad_2.Views.Home">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>


            <StackLayout Grid.Column="0" Grid.Row="0"  Margin="0,0,0,0" >
                <Image Source="HP.png" VerticalOptions="Center" />
                <Image Source="Friends.png" VerticalOptions="Center" />
            </StackLayout>
            <StackLayout Grid.Column="0" Grid.Row="1"  Margin="10,10,10,10">
                <Button Style="{StaticResource BtnLogin}" Clicked="Button_Login"></Button>
                <Button Style="{StaticResource BtnSignUp}" Clicked="Button_Register"></Button>
            </StackLayout>

        </Grid>



    </ContentPage.Content>
</ContentPage>